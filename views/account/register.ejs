<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>
    
    <%- messages() %>
    
    <form action="/account/register" method="post">
      <fieldset>
        <label for="account_firstname">First Name:</label>
        <input type="text" name="account_firstname" id="account_firstname" required value="<%= locals.account_firstname %>">
        
        <label for="account_lastname">Last Name:</label>
        <input type="text" name="account_lastname" id="account_lastname" required value="<%= locals.account_lastname %>">
        
        <label for="account_email">Email Address:</label>
        <input type="email" name="account_email" id="account_email" required value="<%= locals.account_email %>">
        
        <label for="account_password">Password:</label>
        <span class="password-info">
            Passwords must be at least 12 characters and contain at least 1 capital letter, 1 number, and 1 special character.
        </span>
        <div class="password-container">
          <input type="password" name="account_password" id="account_password" required>
          <button type="button" id="pwdBtn">Show Password</button>
        </div>
        
        <button type="submit">Register</button>
      </fieldset>
    </form>
    
    <p>Already have an account? <a href="/account/login">Login here</a></p>
    
    <script>
      const pwdBtn = document.getElementById("pwdBtn");
      const passwordInput = document.getElementById("account_password");
    
      pwdBtn.addEventListener("click", function() {
        if (passwordInput.type === "password") {
          passwordInput.type = "text";
          pwdBtn.textContent = "Hide Password";
        } else {
          passwordInput.type = "password";
          pwdBtn.textContent = "Show Password";
        }
      });
    </script>

