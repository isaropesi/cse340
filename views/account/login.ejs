<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>
    
    <%- messages() %>
    
    <form id="loginForm" action="/account/login" method="post">
      <fieldset>
        <label for="account_email">Email Address</label>
        <input type="email" name="account_email" id="account_email" required value="<%= locals.account_email %>">
        <label for="account_password">Password</label>
        <span class="password-info">
            Passwords must be at least 12 characters and contain at least 1 capital letter, 1 number, and 1 special character.
        </span>
        <input type="password" name="account_password" id="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        <button type="submit">Login</button>
      </fieldset>
    </form>
    
    <p>No account? <a href="/account/register">Sign-up</a></p>